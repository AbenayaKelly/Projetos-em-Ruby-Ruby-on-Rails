<style>
    .voltar{
        display: flex; /* Exibe os itens em linha */
        justify-content: right;
    }
    .alinhar{
        display: flex;
        justify-content: space-between; /* Distribui espaço entre o nome do site e o botão */
        align-items: center; /* Alinha verticalmente o conteúdo do cabeçalho */
        padding: 30px; /* Ajusta o espaçamento ao redor do cabeçalho */
    }

</style>
<div class="alinhar">
<h3>Sign up</h3>
<div class="voltar">
  <%= link_to 'Log in', new_user_session_path,class: 'button2'%>
</div>
</div>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome, autocomplete: "nome" %>
    <% if resource.errors[:nome].any? %><!-- se ouver algum erro associado a este campo -->
      <div class="error-message">
        <%= resource.errors[:nome].first %><!-- mostre a primeira mensagem de erro associada a ele -->
      </div>
      <%end %>
      </div>
  <br>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <% if resource.errors[:email].any? %>
      <div class="error-message">
        <%= resource.errors[:email].first %>
      </div>
    <% end %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if resource.errors[:password].any? %>
      <div class="error-message">
        <%= resource.errors[:password].first %>
      </div>
    <% end %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <% if resource.errors[:password_confirmation].any? %>
      <div class="error-message">
        <%= resource.errors[:password_confirmation].first %>
      </div>
    <% end %>

  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


