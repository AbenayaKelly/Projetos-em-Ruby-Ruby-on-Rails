
<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
        margin: 0;
    }
    .field label{
        display: flow;
        text-align: left;
        right: 20px;
        width: 20px;
        padding: 10px;
    }
    .form-actions{
        display: flex;
        align-items: center;
        padding: 20px;
        flex-direction: column;
        text-align: left;

    }
    .nav{
        display: flex;
        align-items: center;
        flex-direction: column;
        width: 500px;
        height: 400px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #c0c8e9;
    }
    .button-container{
        display: flex;
        justify-content: space-between;

        padding-top: 10px;
        width: 30%;


    }
    .button{
        width: 230px;
        height: 30px;
        background-color:#7e93d3;
        text-align: center;
    }
</style>

<nav class="nav">
<h2 class="Text">Forgot your password?</h2>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <%= f.label :Email%>
  <div class="field">
    <%= f.text_field :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "'Send me reset password instructions'", class:"button" %>
  </div>
<% end %>
  <div class="button-container">
    <div class="button-left">
      <%=link_to"Log in", new_session_path(resource_name) %><br>
    </div>
    <div class="button-right">
      <%= link_to "Sign up", new_registration_path(resource_name) %><br>
    </div>
  </div>
</nav>