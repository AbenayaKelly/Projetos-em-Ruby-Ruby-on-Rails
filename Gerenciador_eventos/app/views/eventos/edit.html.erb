

<style>
    .voltar{
        display: flex; /* Exibe os itens em linha */
        justify-content: right;
    }
    .alinhar{
        display: flex;
        justify-content: space-between; /* Distribui espaço entre o nome do site e o botão */
        align-items: center; /* Alinha verticalmente o conteúdo do cabeçalho */
        padding: 30px; /* Ajusta o espaçamento ao redor do cabeçalho */
    }
</style>
<section>
  <div class="alinhar">
  <h3>Editar Evento</h3>
  <div class="voltar">
  <%= link_to 'Voltar', evento_path(@evento), class: 'button2' %>
  </div>
  </div>
  <%= form_with(model: @evento, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :nome %>
      <%= form.text_field :nome, class: 'form-control' %>
      <%if @evento.errors[:nome].any? %>
      <div class="error-message">
        <%= @evento.errors[:nome].first %>
      </div>
      <% end %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :descrição %>
      <%= form.text_area :descricao, class: 'form-control' %>
      <%if @evento.errors[:descricao].any? %>
        <div class="error-message">
          <%= @evento.errors[:descricao].first %>
        </div>
      <% end %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :data %>
      <%= form.date_select :data, class: 'form-control' %>
    </div>
<br>
    <div class="form-group">
      <%= form.submit 'Atualizar', class: 'btn btn-primary' %>

    </div>
  <% end %>
</section>