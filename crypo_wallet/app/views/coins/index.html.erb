<p id="notice"><%= notice %></p>

<h1><%= Coin.model_name.human(count: @coins.count)%></h1>

<style>
    /* Estilos adicionais para a tabela */
 .table {
        width: 100%;
        border-collapse: collapse;
    }


     .table th, .table td {
         border: 1px solid #2E2F30;
         padding: 8px;
         text-align: left;
     }

     .table th {
         background-color:#DEB887;
     }
/* Estilo de destaque de linha com mouse */
    tr:hover{
        background-color:#F5DEB3;
    }

</style>
<table class="table ">
  <thead>
  <tr>
  <th><%= @coins.human_attribute_name(:description) %></th>
  <th><%= @coins.human_attribute_name(:acronym) %></th>
  <th><%= @coins.human_attribute_name(:url_image) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <%@coins.each do|coin| %>
  <tr>
    <td><%=coin.description %></td>
    <td><%=coin.acronym %></td>
    <td><%=image_tag coin.url_image,width: 30, height: 30  %></td>
    <td><%=link_to t("links.show"),coin %></td>
    <td><%=link_to t("links.edit"), edit_coin_path(coin)%></td>
    <td><%=button_to t("links.delete"),coin, method: :delete, onclick:"return confirm ('#{t("messages.confirm")}')" %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to t("new.coin"), new_coin_path, class: "button" %>

