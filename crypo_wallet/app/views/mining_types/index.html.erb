<p style="color: green"><%= notice %></p>

<h1><%= MiningType.model_name.human(count: @mining_types.count)%></h1>
<style>
    /* Estilos adicionais para a tabela */
    .table {
        width: 100%;
        border-collapse: collapse;
    }


    .table th, .table td {
        border: 1px solid #2E2F30;
        padding: 8px;
        text-align: left;
    }

    .table th {
        background-color:#DEB887;
    }
    /* Estilo de destaque de linha com mouse */
    tr:hover{
        background-color:#F5DEB3;
    }

</style>

<table class="table">
  <thead>
  <tr>
    <th><%= @mining_types.human_attribute_name(:description) %></th>
    <th><%= @mining_types.human_attribute_name(:acronym) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

<tbody>
<% @mining_types.each do |mining_type| %>
<tr>
  <td><%=mining_type.description %></td>
  <td><%=mining_type.acronym %></td>
  <td><%=link_to t("links.show"),mining_type %></td>
  <td><%=link_to  t("links.edit"), edit_mining_type_path(mining_type)%></td>
  <td><%=button_to t("links.delete"),mining_type, method: :delete, onclick:"return confirm ('#{t("messages.confirm")}')" %></td>
</tr>
<% end %>
</tbody>
</table>
<br>

<%= link_to t("new.mining_type"), new_mining_type_path,class:"button" %>
